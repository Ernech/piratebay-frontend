<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProductInfoFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información del producto"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_card_view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_card_view"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artículo: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombreArticulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A la hora señalada"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formato: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombreFormato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DVD"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Localizacion: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLocalizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle 21 Calacoto esq. Montenegro"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proveedor: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProveedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piratas Peru"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidades"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mínimo: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMinimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moneda: "
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMoneda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bolivianos"
                    android:textColor="@color/negro" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

</ScrollView>