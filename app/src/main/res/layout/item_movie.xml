<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:background="@drawable/recyclerview_border">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Título: A la Hora señalada"
            android:textColor="@color/negro"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvIDAndFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Código película: 2 | Formato: DVD"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Proveedor: Piratas Perú"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Fecha de creación: 20/05/2020"
            android:textSize="15dp"
            android:textColor="@color/gris"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/negro"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:id="@+id/tvQuantity"
            />
    </LinearLayout>

</LinearLayout>