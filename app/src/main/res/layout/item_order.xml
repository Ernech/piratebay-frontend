<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:background="@drawable/recyclerview_border">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ID orden: 1"
            android:textColor="@color/negro"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tvOrderSupplierAndReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Proveedor: Piratas PerÃº | Recibo: F-10"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tvQttyRequested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cantidad ordenada: 15"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tvQttyCommited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cantidad Confirmada: 15"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tvQttyReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cantidad recibida: 0"
            android:textColor="@color/negro"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvDateOrdered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Fecha ordenada: 10/05/2020"
            android:textSize="15dp"
            android:textColor="@color/gris"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"

            />
        <TextView
            android:id="@+id/tvDateReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Fecha recibida: 20/05/2020"
            android:textSize="15dp"
            android:textColor="@color/gris"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>



</LinearLayout>